---
image:
  repository: linuxserver/nzbget
  tag: "v21.0-ls61"

config:
  timezone: "Europe/Amsterdam"
  uid: 1031
  gid: 100

persistence:
  enabled: true

extraVolumes:
  - name: nas-media
    persistentVolumeClaim:
      claimName: nfs-nas-media
    mountPath: "/data/nas-media"

ingress:
  enabled: true
  annotations:
    kubernetes.io/ingress.class: nginx
    cert-manager.io/cluster-issuer: bjws-lan-ca-issuer
    nginx.ingress.kubernetes.io/proxy-body-size: 25m
  hosts:
    - host: nzbget.{{ (datasource "cluster-vars").domain.internal }}
      paths:
        - "/"
  tls:
    - secretName: tls.nzbget
      hosts:
        - nzbget.{{ (datasource "cluster-vars").domain.internal }}

resources:
  requests:
    memory: "128M"
  limits:
    memory: "512M"

probes:
  liveness:
    initialDelaySeconds: 0
  readiness:
    initialDelaySeconds: 0
  startup:
    enabled: true
